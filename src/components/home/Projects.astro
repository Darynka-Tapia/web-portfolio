---
import Project from '../../components/home/Project.astro';

---

<section id="projects" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div data-aos="fade-up" data-aos-duration="600">
      <h2 class="text-slate-900 mb-4 text-3xl font-semibold">Featured Projects</h2>
      <p class="text-slate-600 mb-12">A selection of my recent work</p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Project
          image="/images/gift-pool.png"
          name="Gift pool"
          description="Create and manage group funds easily with a simple, user-friendly interface."
          tags={['vue.js', 'tailwindcss', 'firebase']}
          url="https://gift-pool.netlify.app/"
        />
        <Project
          image="/images/scribbly-note.png"
          name="Scribbly notes"
          description="A clean and minimal web app to create, edit, and organize notes."
          tags={['React.js', 'Javascript']}
          url="https://scribbly-note.netlify.app/"
        />
        <Project
          image="/images/rps-game.svg"
          name="Rock, Paper, and Scissors"
          description="Digital game, in which the user plays against the system."
          tags={['vue.js', 'tailwindcss', 'Javascript']}
          url="https://rps-game-09.netlify.app/"
        />
      </div>
    </div>
  </div>
</section>

